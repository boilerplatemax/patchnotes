name: Build & Deploy Unity WebGL

on:
  push:
    branches:
      - main  # runs on pushes to main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      # Setup Unity
      - name: Setup Unity
        uses: game-ci/unity-actions/setup@v2
        with:
          version: '2021.3.20f1'   # <- Replace with your Unity version
          # Optional: If you have a license:
          # license: ${{ secrets.UNITY_LICENSE }}
          # username: ${{ secrets.UNITY_USERNAME }}
          # password: ${{ secrets.UNITY_PASSWORD }}

      # Build WebGL
      - name: Build WebGL
        uses: game-ci/unity-builder@v2
        with:
          targetPlatform: WebGL
          buildPath: Build/WebGL
          versioning: none

      # Deploy to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./Build/WebGL
          publish_branch: gh-pages
